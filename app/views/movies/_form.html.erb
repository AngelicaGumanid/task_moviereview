<%= form_with(model: movie, local: true) do |f| %>
  <% if movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>
      <ul>
        <% movie.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :blurb %>
    <%= f.text_area :blurb %>
  </div>

  <div class="field">
    <%= f.label :genres %>
    <%= f.collection_check_boxes :genre_ids, Genre.all, :id, :name do |b| %>
      <div class="checkbox">
        <%= b.check_box %>
        <%= b.label %>
      </div>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :date_released %>
    <%= f.date_select :date_released %>
  </div>

  <div class="field">
    <%= f.label :country_of_origin %>
    <%= f.text_field :country_of_origin %>
  </div>

  <div class="field">
    <%= f.label :showing_start %>
    <%= f.datetime_select :showing_start %>
  </div>

  <div class="field">
    <%= f.label :showing_end %>
    <%= f.datetime_select :showing_end %>
  </div>

  <div class="actions">
    <%= f.submit movie.persisted? ? "Update Movie" : "Create Movie" %>
  </div>
<% end %>
