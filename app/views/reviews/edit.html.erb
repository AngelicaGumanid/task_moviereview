<h1>Edit Your Review</h1>

<%= form_with(model: [@movie, @review], local: true) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>
      <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content, rows: 5 %> <!-- Editable field -->
  </div>

  <div class="field">
    <strong>Rating:</strong> <%= @review.rating %> / 5 <!-- Rating is displayed but not editable -->
  </div>

  <div class="actions">
    <%= f.submit "Update Review" %>
  </div>
<% end %>

<%= link_to 'Back to Movie', @review.movie %>
